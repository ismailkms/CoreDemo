
@using EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Kullanıcı Rol Listesi </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Kullanıcı</th>
                                    <th>Rol Ata</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td><a href="/Admin/AdminRol/AssignRole/@item.Id" class="btn btn-success">Rol Ata</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminRol/Index/" class="btn btn-outline-info">Rol Listesine Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

