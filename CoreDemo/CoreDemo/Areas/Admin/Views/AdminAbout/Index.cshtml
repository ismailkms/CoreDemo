
@using EntityLayer.Concrete
@model List<About>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }

    <!DOCTYPE html>
    <html>

    <body>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>Hakkımızda </h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.ID</th>
                                            <td>@item.Details2</td>
                                            <td><a href="/Admin/AdminAbout/UpdateAbout/@item.ID" class="btn btn-warning">Düzenle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

</html>


