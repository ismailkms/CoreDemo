
@using EntityLayer.Concrete
@model List<Contact>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }

    <!DOCTYPE html>
    <html>

    <body>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>İletişim İçin Yazanlar </h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adı Soyadı</th>
                                        <th>Mail Adresi</th>
                                        <th>Mesaj</th>
                                        <th>Tarih</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(x => x.ID))
                                    {
                                        <tr>
                                            <th>@item.ID</th>
                                            <td>@item.UserName</td>
                                            <td>@item.Mail</td>
                                            <td>@item.Message</td>
                                            <td>@item.Date.ToString("dd MMM yyyy")</td>
                                            <td><a href="/Admin/AdminContact/DeleteContact/@item.ID" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Sil</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

</html>


