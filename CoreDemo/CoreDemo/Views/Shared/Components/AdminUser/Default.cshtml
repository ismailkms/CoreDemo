
@model EntityLayer.Concrete.AppUser

@{
    Layout = null;
}

<div class="dropdown profile-element">
    <img alt="image" class="rounded-circle" style="width: 50px;height:50px;" src="~/WriterImageFiles/@Model.ImageUrl" />
    <div data-toggle="dropdown" class="dropdown-toggle">
        <span class="block m-t-xs font-bold">@Model.NameSurname</span>
        <span class="text-muted text-xs block">@Model.Email </span>
    </div>
</div>

