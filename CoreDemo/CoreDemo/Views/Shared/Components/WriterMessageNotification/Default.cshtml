
@using EntityLayer.Concrete
@model List<Message2>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model.Where(y => y.Status == true).OrderByDescending(x => x.ID).Take(3))
    {
        <a href="/Message/MessageDetails/@item.ID" class="dropdown-item preview-item" >
            <div class="preview-thumbnail">
                <img src="~/WriterImageFiles/@item.SenderUser.ImageUrl" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.NameSurname sana mesaj gönderdi</h6>
                <p class="text-gray mb-0">
                    @if (DateTime.Now.Subtract(item.Date).Days > 0)
                    {
                        <span>@DateTime.Now.Subtract(item.Date).Days Gün </span>
                    }
                    @if (DateTime.Now.Subtract(item.Date).Hours > 0)
                    {
                        <span>@DateTime.Now.Subtract(item.Date).Hours Saat </span>
                    }
                    @if (DateTime.Now.Subtract(item.Date).Minutes > 0)
                    {
                        <span>@DateTime.Now.Subtract(item.Date).Minutes Dakika </span>
                    }
                    @if (DateTime.Now.Subtract(item.Date).Seconds > 0)
                    {
                        <span>@DateTime.Now.Subtract(item.Date).Seconds Saniye </span>
                    }
                    <span>Önce</span>
                </p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">@Model.Where(y => y.Status == true).Count() Yeni Mesaj</h6>
</div>