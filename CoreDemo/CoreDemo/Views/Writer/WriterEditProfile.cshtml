@model EntityLayer.Concrete.AppUser
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" asp-for="@Model.NameSurname" class="form-control" required="" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.UserName" class="form-control" required="" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail</label>
                    <input type="text" asp-for="@Model.Email" class="form-control" required="" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifre</label>
                    <input type="password" asp-for="@Model.PasswordHash" class="form-control" />
                </div>
                    <input type="hidden" asp-for="@Model.ImageUrl"  />
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button asp-action="Index" asp-controller="Dashboard" class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>


