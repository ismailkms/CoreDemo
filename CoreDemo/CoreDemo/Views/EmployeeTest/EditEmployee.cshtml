
@model CoreDemo.Controllers.Class1

@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Personel Güncelleme Sayfası</h1>
<form method="post">
    <label>ID</label>
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    <label>Çalışan Adı Soyadı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <button type="submit" class="btn btn-info">Çalışan Güncelle</button>
</form>
