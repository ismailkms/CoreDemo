
@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Bloglar</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <td>@item.Title</td>
            <td>@(((DateTime)item.CreateDate).ToString("dd MMM yyyy"))</td>
            <td><span class="badge badge-pill badge-info">@item.Category.Name</span></td>
            @if(item.Status == true)
            {
                <td>Aktif</td>
            }
            else
            {
                <td>Pasif</td>
            }
            <td><a href="/Blog/DeleteBlog/@item.ID" onclick="return confirm('Bloğu silmek istediğinize emin misiniz?');" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.ID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-info">Yeni Blog Oluştur</a>

