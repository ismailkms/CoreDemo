
@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>

    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <img src="@item.Image" style="width:100%;" class="img-fluid" alt="">
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)item.CreateDate).ToString("dd MMM yyyy"))
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>

                            <h3>
                                <a href="single.html">@item.Title</a>
                            </h3>
                            <p>
                                @item.Content
                            </p>
                            <a href="/Blog/Index/" class="btn btn-primary read-m">Blog Listesi</a>
                        </div>
                    }

                    @await Component.InvokeAsync("CommentListByBlog", new { id = ViewBag.i })

                    @*@await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml")*@

                    @*@await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")*@
                    @await Component.InvokeAsync("AddComment", new { id = ViewBag.i })

                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/CoreBlogTema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        <h4>Mail Bültenine Abone Olun</h4>

                        @await Component.InvokeAsync("NewsLetter", new { id = ViewBag.i })

                        @await Component.InvokeAsync("WriterLastBlog", new { id = ViewBag.i })

                        @await Component.InvokeAsync("CategoryList")

                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
</body>

</html>
